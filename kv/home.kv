<HomeScreen>:
    name: "home"
    canvas.before:
        Color:
            rgba: 0.9, 0.9, 0.98, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'horizontal'

        SidePanel:
            id: side_panel
            size_hint_x: 0.2

        FloatLayout:
            size_hint_x: 0.8

            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.8, 0.9
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                padding: 10
                spacing: 10

                Label:
                    text: "[i]Home[/i]"
                    markup: True
                    font_size: 36
                    bold: True
                    color: 0.4, 0.2, 0.6, 1
                    size_hint_y: None
                    height: 50
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size

                ScrollView:
                    size_hint_y: 1
                    do_scroll_x: False

                    BoxLayout:
                        id: contact_cards
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: 10
