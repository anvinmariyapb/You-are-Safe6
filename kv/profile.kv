
<ProfileScreen>:
    name: "profile"
    
    canvas.before:
        Color:
            rgba: 0.9, 0.9, 0.98, 1   # Light lavender color (RGB roughly #E6E6FA)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'horizontal'

        SidePanel:
            id: side_panel
            size_hint_y: 1

        FloatLayout:
            Label:
                id: profile_label
                text: "Welcome, Fearless Soul!"
                font_size: 42
                bold: True
                halign: 'center'
                valign: 'middle'
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
                pos_hint: {"center_x": 0.5, "top": 0.85}
                color: 0.4, 0.1, 0.6, 1

            Label:
                id: safety_quote
                text: ""  
                font_size: 30
                halign: 'center'
                valign: 'middle'
                text_size: self.width * 0.9, None
                size_hint_y: None
                height: self.texture_size[1]
                pos_hint: {"center_x": 0.5, "top": 0.65}
                color: 0.2, 0.2, 0.5, 1
            
